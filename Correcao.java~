public class Correcao{
 
  public static void main(String[] args){
  
    int horas = Entrada.leiaInt("Número de horas");
    double min = Entrada.leiaInt("Número de minutos");
    double phora = 0;
    double shora = 0;
    double horasextra = 0;
    if(horas < 1){      
      phora = 2 * min / 60;
    }else{ 
      if(horas < 2){
       phora = 2;
       shora = 1.5 * min / 60;
      }else{
        phora = 2;
        shora = 1.5;
        horasextra = ((horas - 2) + (min / 60));
      }
    }
      System.out.println("Total a pagar R$: " + (phora + shora + horasextra));
      
  }

}